<div class="modal fade no_connection" id="notificationOpinionsModal" tabindex="-1" role="dialog">
  <div class="modal-dialog thin" role="document">
    <div class="modal-content">

    	<div class="modal-header">
    		<h5 class="pt-1">Agree/Disagree</h5>


        <button data-dismiss="modal" class="btn btn-link close_modal">
          <i class="fas fa-times text-green"></i>
        </button>
    	</div>

      <div class="modal-body">
        <div ng-repeat="opinionator in allOpinionators.opinionators" class="feed-listing feed-follow">
          <div class="card px-0 py-0 no-border">
            <div class="user_info d-flex justify-content-between align-items-start">
              <div class="user_info_inner d-flex align-items-start">
                <a href="{{opinionator.path}}">
                  <img ng-src="{{opinionator.image}}" alt="{{opinionator.displayName}}" class="mr-3 rounded-circle" />
                </a>
                <div class="pt-md-1">
                  <h4 class="mt-md-2">
                    <a href="{{opinionator.path}}">
                      <b>{{opinionator.displayName}}</b>
                      <span class="text-muted">{{opinionator.username}}</span>
                    </a>
                  </h4>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
