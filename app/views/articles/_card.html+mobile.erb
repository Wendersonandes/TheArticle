<div class="card py-2 px-2 mb-2">
	<div class="align-items-start d-flex">

		<a href="{{ item.path }}">
			<img ng-src="{{item.image}}" class="feed_image mr-2" alt="{{item.title}}" />
		</a>

		<div class="w-100">
			<div class="d-flex align-items-start justify-content-between">
				<div>
					<h5 class="card-title d-flex justify-content-between mb-1">
						<a href="{{ item.path }}">
							<span>{{ item.title }}</span>
						</a>
					</h5>
					<h6 class="text-muted mb-1">
						<a href="{{ item.path }}">
							<span>{{ item.author }}</span>
						</a>
					</h6>
				</div>
			</div>

			<div class="py-0 w-100">
				<p class="card-text" ng-if="item.snippet">
					<a href="{{ item.path }}">
						<small>{{ item.snippet }}</small>
					</a>
				</p>

				<div ng-if="item.isRatings" class="ratings mt-3">
					<h5 class="mb-1 text-black">Your ratings:</h5>
					<ul>
						<li>- Well argued: <b>{{ item.ratingWellWritten }}</b></li>
						<li>- Valid points: <b>{{ item.ratingValidPoints }}</b></li>
						<li>- Agree with arguments: <b>{{ item.ratingAgree }}</b></li>
					</ul>
				</div>

			</div>
		</div>


	</div>
</div>