<% page_title "Sign in" %>

<section ng-controller="AuthController" class="auth">
  <div class="container pt-4 pt-lg-5 pb-4">
    <div class="row">
     <div class="col-12">
       <h2 class="mb-3 text-center">Sign in</h2>
     </div>
    </div>
    <div class="row">
      <div class="col-0 col-md-2"></div>
      <div class="col-0 col-md-8">
        <% if notice %><div class="alert alert-success" role="alert"><%= notice %></div><% end %>
        <% if alert %><div class="alert alert-danger" role="alert"><%= alert %></div><% end %>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: '' %>
          </div>

          <div class="form-group">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: '' %>
            <a href="#" ng-click="openForgottenPasswordForm($event)"><small>Forgot your password?</small></a>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="form-group">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Sign in", class: "btn btn-success btn-block text-white my-3" %>
          </div>
        <% end %>

        <p>Don't have an account with <b>TheArticle</b>? <a href="<%= new_user_registration_path %>">Register here</a>.</p>
      </div>
      <div class="col-0 col-md-2"></div>
    </div>
  </div>
</section>