<% page_title "Register" %>

<section ng-controller="AuthController" class="auth">
  <div class="container pt-4 pt-lg-4 pb-4">
    <div class="row">
      <div class="col-12">
        <h2 class="mb-3 text-center">Join now – it's free</h2>
      </div>
    </div>

    <div class="row">
      <div class="col-0 col-md-3"></div>
      <div class="col-0 col-md-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.select :title, options_for_select([ "Mrs", "Mr", "Dr", "Rt. Hon", "Rev" ], resource.title), {}, { class: "form-control short", required: '' } %>
        </div>

        <div class="form-group">
          <%= f.label :first_name %><br />
          <%= f.text_field :first_name, autofocus: true, autocomplete: "First name", class: "form-control", required: '' %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, autofocus: true, autocomplete: "Last name", class: "form-control", required: '' %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: '' %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: '' %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: '' %>
        </div>

        <div class="form-group checker">
          <label>
            <input type="checkbox" name="tandc" id="tandc" required='true' />
            <small>I am over 16 and agree to TheArticle Terms & Conditions and Privacy Policy</small>
          </label>
        </div>

        <div class="actions">
          <%= f.submit "Join", class: "btn btn-success btn-block text-white my-3" %>
        </div>
      <% end %>

      <p>Already have an account with <b>TheArticle</b>?  <a href="<%= new_user_session_path %>">Sign in here</a>.</p>
      </div>
      <div class="col-0 col-md-3"></div>
    </div>
  </div>
</section>