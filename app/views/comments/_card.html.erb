<div class="card">
	<div class="user_info d-flex justify-content-between align-items-start">

		<div class="user_info_inner d-flex align-items-start">
			<a href="{{item.commentAction.user.path}}">
				<img ng-src="{{item.commentAction.user.image}}" alt="{{item.commentAction.user.displayName}}" class="mr-3 rounded-circle" />
			</a>
			<div>
				<h4 class="mb-3">
					<a href="{{item.commentAction.user.path}}">
						<span ng-bind-html="item.commentAction.sentence" data-share="{{item.share.id}}"></span>
						&bullet; <span><time>{{item.commentAction.date}}</time></span>
					</a>
				</h4>
			</div>
		</div>
		<div ng-if="item.commentAction.user.id != <%= user_signed_in? ? current_user.id : 0 %>">
			<%= render partial: 'common/options_menu', locals: { from: :commentAction } %>
		</div>
	</div>

	<p class="post" ng-if="item.commentAction.comment.length > 0">
		<span ng-bind-html="item.commentAction.comment"></span>
	</p>

	<%= render 'shares/card' %>
</div>