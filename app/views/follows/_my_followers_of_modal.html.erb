<div class="modal fade no_connection" id="myFollowersOfModal" tabindex="-1" role="dialog">
  <div class="modal-dialog thin" role="document">
    <div class="modal-content">

    	<div class="modal-header">
    		<h5 class="pt-1">Followers of {{myFollowersOf.followed}}</h5>


        <button data-dismiss="modal" class="btn btn-link close_modal">
          <i class="fas fa-times text-green"></i>
        </button>
    	</div>

      <div class="modal-body">
          <div ng-repeat="follower in myFollowersOf.followers" class="feed-listing feed-follow">
            <div class="card px-0 py-0 no-border">
              <div class="user_info d-flex justify-content-between align-items-start">
                <div class="user_info_inner d-flex align-items-start">
                  <a href="{{follower.path}}">
                    <img ng-src="{{follower.image}}" alt="{{follower.displayName}}" class="mr-3 rounded-circle" />
                  </a>
                  <div class="pt-1">
                    <h4 class="mt-2">
                      <a href="{{follower.path}}">
                        <b>{{follower.displayName}}</b>
                        <span class="text-muted">{{follower.username}}</span>
                      </a>
                    </h4>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
