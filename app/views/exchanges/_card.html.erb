<div class="card">
	<div class="user_info d-flex justify-content-between align-items-start" ng-if="item.user">

		<div class="user_info_inner d-flex align-items-start">
			<img ng-src="{{item.user.image}}" alt="{{item.user.displayName}}" />
			<div>
				<h4>{{item.user.displayName}} <span class="text-muted">{{item.user.username}}</span></h4>
				<p><b>Followed an exchange</b> &bullet; {{item.followedDate}}</p>
			</div>
		</div>

		<nav class="navbar share_menu_btn d-inline-block">
			<a href='#' data-toggle="dropdown">
				<i class="fas fa-chevron-circle-down"></i>
			</a>
		  <div class="dropdown-menu dropdown-menu-right">
		    <a class="dropdown-item" href="#" ng-click="report()">Report</a>
	      <a class="dropdown-item" href="#" ng-click="block()">Block</a>
	      <a class="dropdown-item" href="#" ng-click="mute()">Mute</a>
		  </div>
		</nav>
	</div>

	<div class="exchange_box">
		<div class="inner justify-content-start d-flex align-items-start">
			<div class="img_mask">
				<a ng-if="item.image" href="{{ item.path }}">
					<img ng-src="{{ item.image }}" alt="{{ item.title }}" />
				</a>
			</div>

			<div class="pl-3">
				<h4 class="entry-title mb-2" id="article-post-title-{{ item.id }}">
					<a href="{{ item.path }}">{{item.name}}</a>
				</h4>

				<div class="">
					{{ item.excerpt }}
				</div>

				<% if user_signed_in? %>
				<button class="mt-1 btn follow_btn follow_exchange"
								ng-class="{ 'btn-outline-dark': !item.imFollowing, 'btn-dark': item.imFollowing }"
								ng-click="toggleFollowExchangeFromCard(exchange, $event)">
					<i class="fas fa-plus-square mr-1"></i>
					<span ng-show="item.imFollowing">Following</span>
					<span ng-show="!item.imFollowing">Follow</span>
				</button>
				<% end %>

			</div>
		</div>

	</div>
</div>