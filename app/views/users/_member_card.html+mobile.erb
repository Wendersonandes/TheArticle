<div class="py-2 px-2 mb-2">
	<div class="align-items-start d-flex">

		<a href="{{ item.path }}">
			<img ng-src="{{item.profilePhoto}}" class="rounded-circle feed_image mr-2" alt="{{item.displayName}}" />
		</a>

		<div class="w-100">
			<div class="d-flex align-items-start justify-content-between">
				<div>
					<h5 class="card-title d-flex justify-content-between mb-1">
						<a href="{{ item.path }}">
							<span>{{ item.displayName }}</span>
						</a>
					</h5>
					<h6 class="text-muted mb-1">
						<a href="{{ item.path }}">
							<span>{{ item.username }}</span>
						</a>
						<span ng-show="item.isFollowingMe" class="badge follower-badge">Follows you</span>
					</h6>
				</div>

				<% if user_signed_in? %>
					<button class="btn btn-sm follow_btn mt-2"
									ng-class="{ 'btn-outline-success': !item.imFollowing, 'btn-success': item.imFollowing }"
									ng-click="toggleFollowUserFromCard(item, $event)"
									ng-if="(!item.isMe) && (!item.isMute) && (!item.isBlock)">
						<i class="fas fa-users mr-2"></i>
						<span ng-show="item.imFollowing">Following</span>
						<span ng-show="!item.imFollowing">Follow</span>
					</button>

					<button class="btn btn-sm mt-2 btn-info"
									ng-click="unmute(item, $event)"
									ng-if="item.isMute">
						Unmute
					</button>

					<button class="btn btn-sm mt-2 btn-info"
									ng-click="unblock(item, $event)"
									ng-if="item.isBlock">
						Unblock
					</button>
				<% else %>
					<button class="btn btn-sm follow_btn btn-outline-success"
									 ng-click="actionRequiresSignIn($event, 'follow ' + item.displayName)">
						<i class="fas fa-users mr-2"></i>
						Follow
					</button>
				<% end %>
			</div>

			<div class="py-0 w-100">
				<p class="card-text">
					<a href="{{ item.path }}">
						<small>{{ item.bio }}</small>
					</a>
				</p>
			</div>

		</div>
	</div>

	<div class="shared_followers w-100" ng-if="item.sharedFollowers.length > 0" ng-bind-html="item.sharedFollowers"></div>
</div>