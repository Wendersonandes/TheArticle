<div class="pt-md-2 comment-item comment-item-child px-2" data-comment-id="{{child.data.id}}">
  <div class="user_info d-flex justify-content-between align-items-start">

    <div class="user_info_inner d-flex align-items-start">
      <a href="{{child.data.path}}">
        <img ng-src="{{child.data.photo}}" alt="Image of {{child.data.displayName}}" class="rounded-circle mr-3" />
      </a>
      <div class="comment_text">
        <h4>
          <a href="{{child.data.path}}">
            {{child.data.displayName}}
            <span class="text-muted">{{child.data.username}}</span> &bullet;
            <span>
              <time datetime="{{child.data.timeActual}}">
            {{child.data.timeHuman}}
              </time>
            </span>
          </a>
        </h4>
        <div class="comment_body" ng-bind-html="trustAsHtml(child.data.body)"></div>
      </div>
    </div>
    <div>
      <%= render partial: 'common/options_menu', locals: { from: :childComment } %>
    </div>
  </div>

  <div class="reply_area pl-5" ng-if="(item.canInteract == 'yes') && (child.data.userId != <%= user_signed_in? ? current_user.id : 0 %>)">
    <a href='#' class="reply text-green" ng-click="replyToComment($event, child, comment, true)">
      Reply
    </a>

    <a href='#' class="delete text-red pl-3" ng-click="deleteOthersComment($event, item, child, comment)" ng-if="item.share.user.id == <%= user_signed_in? ? current_user.id : 0 %>">
      Delete
    </a>
  </div>
</div>
