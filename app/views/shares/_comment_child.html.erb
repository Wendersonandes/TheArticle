<div class="card py-md-2 comment-item" data-comment-id="{{child.data.id}}">
  <div class="user_info d-flex justify-content-between align-items-start">

  <div class="user_info_inner d-flex align-items-start">
    <img ng-src="{{child.data.photo}}" alt="Image of {{child.data.firstName}}" class="mr-3" />
    <div>
      <h4>{{child.data.displayName}} <span class="text-muted">{{child.data.username}}</span> &bullet; <span>  <time datetime="{{child.data.timeActual}}">
          {{child.data.timeHuman}}
        </time>
        </span></h4>
      <p class="follow_summary mb-0" ng-bind-html="child.data.body"></p>
    </div>
    </div>
  </div>
</div>
