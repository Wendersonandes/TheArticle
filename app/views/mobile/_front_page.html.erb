<div class="tab-pane fade show active" id="content-front-page"
	role="tabpanel"
	aria-labelledby="front-page-tab"
	 ng-controller="FrontPageController"
	 data-latest-time="<%= @latest_activity_time.to_i %>" ng-cloak>

	 <ul class="bg-white nav nav-tabs nav-fill d-flex" id="home_feed_tabs">
			<li class="nav-item">
			  <a id="activity-articles-tab" class="pb-2 pt-3 nav-link active"
			  		ng-click="selectTab('articles')"
			  		ng-class="{'active': selectedTab == 'articles', 'disabled': !feeds.firstLoaded}"
			  		ng-disabled="!feeds.firstLoaded">
			    <label>Articles</label>
			  </a>
			</li>
			<li class="nav-item">
			  <a id="activity-posts-tab" class="pb-2 pt-3 nav-link"
			  		ng-click="selectTab('posts')"
			  		ng-class="{'active': selectedTab == 'posts', 'disabled': !feeds.firstLoaded}"
			  		ng-disabled="!feeds.firstLoaded">
			    <label>Posts</label>
			  </a>
			</li>
			<li class="nav-item">
			  <a id="activity-follows-tab" class="pb-2 pt-3 nav-link"
			  		ng-click="selectTab('follows')"
			  		ng-class="{'active': selectedTab == 'follows', 'disabled': !feeds.firstLoaded}"
			  		ng-disabled="!feeds.firstLoaded">
			    <label>Follow activity</label>
			  </a>
			</li>
		</ul>

		<div class="container">
			<div class="alert alert-success mb-3 mt-3" ng-show="showWelcome">
				<h4 class="alert-success mt-3">Thank you for registering on TheArticle.</h4>
				<p class="alert-success">Instructions for confirming email address here. Instructions for confirming email address here. Instructions for confirming email address here. Instructions for confirming email address here. </p>
			</div>

			<div class="alert alert-success mb-3 mt-3" ng-show="showPasswordChangedThanks" ng-cloak>
				<p class="alert-success">Thanks, your password has been changed.</p>
			</div>

			<section id="feed" class="front_page_page">
				<div class="" id="activity-tabs">
					<div class="mb-0 mt-3 px-2 py-1 mb-3 results_block row feed-listing">
	          <textarea name="third_party_article_url"
	                      id="third_party_article_url_phantom"
	                      ng-keyup="openThirdPartySharingPanelIfEnterPressed($event)"
	                      ng-focus="expandThirdPartySharingTextarea($event)"
	                      ng-blur="contractThirdPartySharingTextarea($event)"
	                      ng-paste="openThirdPartySharingPanelFromPaste($event)"
	                      placeholder="What are you reading?"
	                      class="form-control w-100"></textarea>
					</div>

					<!-- Articles Tab -->
					<div class="" ng-show="(selectedTab == 'articles')">

						<div class="ajax_loading feeds" ng-if="!feeds.firstLoaded">Loading feeds...</div>

						<div ng-if="feeds.firstLoaded" class="results_block row"
								ng-class="{'empty': feeds.data.length == 0}">
							<p class="col-12 empty_resource" ng-if="feeds.data.length == 0">
								<span>There is no activity to show here</span>
							</p>

							<div ng-repeat="item in feeds.data" class="col-12 feed-listing pb-3 px-0 type-{{item.type}}"
										ng-class="{'feed-share': item.type == 'categorisation', 'feed-exchange': item.type == 'exchange'}" ng-show="(item.isVisible != false) && _.contains(['exchange', 'categorisation'], item.type)">
									<div ng-if="item.type == 'exchange'"><%= render 'exchanges/card' %></div>
									<div ng-if="item.type == 'categorisation'"><%= render 'categorisations/card' %></div>
							</div>
						</div>
					</div>


					<!-- Posts Tab -->
					<div class="" ng-show="(selectedTab == 'posts')">
						<div ng-if="feeds.firstLoaded" class="results_block row"
								ng-class="{'empty': feeds.data.length == 0}">
							<p class="col-12 empty_resource" ng-if="feeds.data.length == 0">
								<span>There is no activity to show here</span>
							</p>

							<div ng-repeat="item in feeds.data"
										 class="col-12 feed-listing feed-share pb-3 px-0 type-{{item.type}}"
										 ng-show="(item.isVisible != false) && _.contains(['share', 'rating', 'commentAction', 'opinionAction'], item.type)">
									<div ng-if="item.type == 'share'"><%= render 'shares/card' %></div>
									<div ng-if="item.type == 'rating'"><%= render 'shares/card' %></div>
									<div ng-if="item.type == 'commentAction'"><%= render 'comments/card' %></div>
									<div ng-if="item.type == 'opinionAction'"><%= render 'opinions/card' %></div>
							</div>
						</div>
					</div>


					<!-- Follow activity Tab -->
					<div class="" ng-show="(selectedTab == 'follows')">
						<div ng-if="feeds.firstLoaded" class="results_block row"
								ng-class="{'empty': feeds.data.length == 0}">
							<p class="col-12 empty_resource" ng-if="feeds.data.length == 0">
								<span>There is no activity to show here</span>
							</p>

							<div ng-repeat="item in feeds.data"
										 class="col-12 feed-listing pb-3 px-0 type-{{item.type}}"
										 ng-show="(item.isVisible != false) && _.contains(['follow', 'suggestion'], item.type)">
									<div ng-if="item.type == 'follow'"><%= render 'follows/card' %></div>
									<div ng-if="(item.type == 'suggestion') && (suggestions.length > 2)"><%= render 'carousels/profile-suggestions' %></div>
							</div>
						</div>
					</div>
				</div>
			</section>
		</div>
</div>

