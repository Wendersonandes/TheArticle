<div class="modal fade no_connection" id="commentersOnShareModal" tabindex="-1" role="dialog">
  <div class="modal-dialog thin" role="document">
    <div class="modal-content">

    	<div class="modal-header">
    		<h5 class="pt-1">Commented on post</h5>


        <button data-dismiss="modal" class="btn btn-link close_modal">
          <i class="fas fa-times text-green"></i>
        </button>
    	</div>

      <div class="modal-body">
          <div ng-repeat="commenter in commentersOfShare.commenters" class="feed-listing feed-follow">
            <div class="card px-0 py-0 no-border">
              <div class="user_info d-flex justify-content-between align-items-start">
                <div class="user_info_inner d-flex align-items-start">
                  <a href="{{commenter.path}}">
                    <img ng-src="{{commenter.image}}" alt="{{commenter.displayName}}" class="mr-3 rounded-circle" />
                  </a>
                  <div class="pt-1">
                    <h4 class="mb-2">
                      <a href="{{commenter.path}}">
                        <b>{{commenter.displayName}}</b><br />
                        <span class="text-muted">{{commenter.username}}</span>
                      </a>
                    </h4>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>
