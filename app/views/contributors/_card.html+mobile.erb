<div class="card py-2 px-2 mb-2">
	<div class="align-items-start d-flex">

		<a href="{{ contributor.path }}">
			<img ng-src="{{contributor.image}}" class="rounded-circle feed_image" alt="{{contributor.name}}" />
		</a>

		<div class="w-100">
			<div class="d-flex align-items-start justify-content-between">
				<div>
					<h5 class="card-title d-flex justify-content-between mb-1">
						<a href="{{ contributor.path }}">
							<span>{{ contributor.name }}</span>
						</a>
					</h5>
					<h6 class="text-muted mb-1">
						<a href="{{ contributor.path }}">
							<span>{{ contributor.articleCount }}</span>
						</a>
					</h6>
				</div>
			</div>
		</div>

	</div>
</div>