<div class="modal mobile_full fade" id="testDomainFeedbackFormModal" tabindex="-1" role="dialog">
  <div class="modal-dialog medium" role="document">
    <div class="modal-content" ng-controller="TestingFeedbackController"
          data-default-url="<%= request.original_url %>"
          data-device="<%= "#{browser.device.name} [#{browser.device.id}]" %>"
          data-platform="<%= "#{browser.platform.name} #{browser.platform.version}" %>"
          data-browser="<%= "#{browser.name} #{browser.version}" %>"
          data-url="<%= request.original_url %>">

      <div class="modal-body px-4 px-md-4">
        <header class="container auth_header mb-4">
          <div class="row">
            <div class="col col-md-12">
              <div id="logo" class="py-md-4">
                <span class="text-hide">TheArticle</span>
              </div>
            </div>
          </div>
        </header>

        <section>
            <div class="form-group">
              <label>Device: </label>
              <p><%= "#{browser.device.name} [#{browser.device.id}]" %></p>
              <label>Platform: </label>
              <p><%= "#{browser.platform.name} #{browser.platform.version}" %></p>
              <label>Browser: </label>
              <p><%= "#{browser.name} #{browser.version}" %></p>
            </div>

            <div class="form-group">
              <label>URL: </label>
              <textarea name="feedback[url]" ng-model="feedback.data.url" class="form-control"></textarea>
            </div>

            <div class="form-group">
              <label>Your name: </label>
              <input type="text" name="feedback[name]" ng-model="feedback.data.name" class="form-control" />
            </div>

            <div class="form-group">
              <label>Comments: </label>
              <textarea name="feedback[comments]" ng-model="feedback.data.comments" class="form-control"></textarea>
            </div>

            <p class="alert alert-danger" ng-if="feedback.error">{{feedback.error}}</p>

            <button class="btn btn-success btn-block btn-lower" ng-click="submitFeedbackForm($event)">Submit feedback</button>
          </section>
      </div>
    </div>
  </div>
</div>