<%= render 'layouts/head' %>

<% if flash[:notice] %>
<div id="flash_notice" class="d-none">
  <%= flash[:notice].html_safe %>
</div>
<% end %>

<section ng-controller="RouterController">
  <% unless request.headers["X-MobileApp"] %>
  <%= render partial: 'layouts/mobile-side-menu', locals: { use_app_links: true } %>

  <main id="panel_for_side_menu">
    <%= render('layouts/mobile-ad-top') if show_ads? %>
  <% end %>

    <div id="content">
      <% unless request.headers["X-MobileApp"] %>
        <header id="main_header" ng-controller="HeaderBarController" ng-cloak>
        <div class="container">

          <!-- Non tabbed app page header -->
          <div class="app_page_heading py-1" ng-show="appPage">
            <div class="d-flex justify-content-between">
              <div ng-if="showBackPage" class="with_back">
                <h4 class="pt-2">
                  <a ng-click="backPage($event)" href='#' class="text-black">
                    <i class="fas fa-chevron-left backer mr-2"></i>
                    {{appPageTitle}}
                  </a>
                </h4>
                <h6><%= current_user.username %></h6>
              </div>

              <div ng-if="!showBackPage">
                <h4 class="pt-2" ng-if="!showBackPage">{{appPageTitle}}</h4>
                <h6><%= current_user.username %></h6>
              </div>

              <a ng-click="openFrontPage()" href='#' class="d-block pt-2 text-green" id="close_app_page">
                <i class="fas fa-times text-green"></i>
              </a>
            </div>
          </div>

          <!-- Tabbed app page header -->
          <div class="row" ng-show="!appPage">

            <div class="col-3 align-items-center">
              <a id="sidebarCollapse" class="text-black" href='#'>
                <i class="fas fa-align-left" aria-hidden="true"></i>
              </a>
             </div>

            <div id="logo" class="col-6 d-flex justify-content-center">
              <a href="/?<%= 'force_home=1' if user_signed_in? %>">
                <span class="text-hide">TheArticle</span>
              </a>
            </div>

            <div class="col-3 align-items-center">
            </div>

          </div>
        </div>
        </header>

        <nav id="member_options" ng-show="!appPage" ng-cloak>
        <ul class="nav nav-pills nav-fill d-flex" ng-controller="AppBarController" data-signed-in="<%= user_signed_in? ? 1 : 0 %>">
          <li class="nav-item">
            <a class="nav-link active" id="front-page-tab" data-toggle="tab" href="#content-front-page">
              <i class="fas fa-home"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="follows-tab" data-toggle="tab" href="#content-follows">
              <i class="fas fa-users"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="search-tab" data-toggle="tab" href="#content-search">
              <i class="fas fa-search"></i>
            </a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="notifications-tab" href="/notifications">
              <i class="fas fa-bell"></i>
              <span class="badge badge-danger rounded-circle ng-cloak" ng-if="notificationBadgeCount > 0">
                <span ng-if="notificationBadgeCount > 99">99+</span>
                <span ng-if="notificationBadgeCount <= 99">{{notificationBadgeCount}}</span>
              </span>
            </a>
          </li>
        </ul>
        </nav>
      <% end %>

      <%= render 'common/search-box' %>

      <main id="main_content" ng-class="{'app_page': appPage != false}" class="<%= params[:controller] %>_<%= params[:action] %>"  data-slideout-ignore>
        <div class="tab-content" id="app_tabs" ng-show="!appPage">
          <%= render 'mobile/front_page' %>
          <%= render 'mobile/follows' %>
          <%= render 'mobile/messaging' %>
        </div>
      </main>

    </div>

    <div class="overlay"></div>

  <% unless request.headers["X-MobileApp"] %>
  </main>
  <% end %>
</section>


<script id="commentPost" type="script/x-mustache">
  <%= render partial: 'shares/comment_post_modal' %>
</script>

<script id="opinionPost" type="script/x-mustache">
  <%= render partial: 'shares/opinion_post_modal' %>
</script>

<script id="concernReport" type="script/x-mustache">
  <%= render partial: 'concern_reports/modal' %>
</script>

<script id="thirdPartySharing" type="script/x-mustache">
  <%= render partial: 'third_party_articles/sharing_modal' %>
</script>

<script id="confirmNonWhiteListed" type="script/x-mustache">
  <%= render partial: 'third_party_articles/confirm_non_whitelisted_modal' %>
</script>

<script id="notificationComments" type="script/x-mustache">
  <%= render partial: 'notifications/all_comments_modal' %>
</script>

<script id="notificationOpinions" type="script/x-mustache">
  <%= render partial: 'notifications/all_opinions_modal' %>
</script>

<script id="notificationFollowers" type="script/x-mustache">
  <%= render partial: 'notifications/all_followers_modal' %>
</script>

<%= render 'layouts/foot' %>